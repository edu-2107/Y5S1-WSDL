@prefix onto: <http://example.org/ontomaint#> .
@prefix sosa: <http://www.w3.org/ns/sosa/> .
@prefix s4inma: <https://saref.etsi.org/saref4inma/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

onto:Machine           a owl:Class ;
  rdfs:subClassOf s4inma:ProductionEquipment .

onto:Job               a owl:Class .
onto:ErrorContext      a owl:Class .
onto:FailurePropagation a owl:Class .
onto:CorrectiveAction  a owl:Class .

# associates error to the machine
onto:affectsMachine    a owl:ObjectProperty ;
  rdfs:domain onto:ErrorContext ;
  rdfs:range  onto:Machine .

# associates error to the task that stopped
onto:blocksJob         a owl:ObjectProperty ;
  rdfs:domain onto:ErrorContext ;
  rdfs:range  onto:Job .

# associates error to its solution
onto:requiresAction    a owl:ObjectProperty ;
  rdfs:domain onto:ErrorContext ;
  rdfs:range  onto:CorrectiveAction .

# which jobs fail next due to the 1st one
onto:nextJob           a owl:ObjectProperty ;
  rdfs:domain onto:Job ;
  rdfs:range  onto:Job .

# points to next error
onto:propagatesTo      a owl:ObjectProperty ;
  rdfs:domain onto:FailurePropagation ;
  rdfs:range  onto:ErrorContext .

# points to original error
onto:hasCause          a owl:ObjectProperty ;
  rdfs:domain onto:FailurePropagation ;
  rdfs:range  onto:ErrorContext .

# associates machine to its sensor
onto:monitoredBy       a owl:ObjectProperty ;
  rdfs:domain onto:Machine ;
  rdfs:range  sosa:Sensor .

# integer number to represent severity
onto:hasSeverity a owl:DatatypeProperty ;
  rdfs:domain onto:ErrorContext ;
  rdfs:range xsd:integer .

# cost of error in time
onto:hasDowntimeMinutes a owl:DatatypeProperty ;
  rdfs:domain onto:ErrorContext ;
  rdfs:range xsd:integer .
